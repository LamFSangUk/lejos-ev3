<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/button_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="32dp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="42dp"
        android:text="check" />

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_bt"
        android:layout_below="@+id/button_bt"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="126dp"
        android:text="Start" />

    <Button
        android:id="@+id/button_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_stop"
        android:layout_below="@+id/button_stop"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="126dp"
        android:text="Restart" />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_start"
        android:layout_below="@+id/button_start"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="126dp"
        android:text="Stop" />

</RelativeLayout>